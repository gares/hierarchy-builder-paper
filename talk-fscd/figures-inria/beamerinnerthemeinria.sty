\defbeamertemplate*{part page}{inria theme}
{%
  % for the horizontal offset see
  % see section "8.2.2 The Sidebars" of the beamer user guide
\hspace*{-\Gm@lmargin}%
\begin{tikzpicture}
   \useasboundingbox(0,0)rectangle(\paperwidth,\paperheight);
   \draw(0,0)node [anchor=south west,outer sep=0pt, inner sep=0pt ]{\pgfuseimage{figbackground}};
   \draw(0,0)node [anchor=south west,outer sep=0pt, inner sep=0pt ]{\pgfuseimage{figfootline-white}};
   %
   \draw (0.02\paperwidth,0)
   node [anchor=south west,outer sep=0pt, inner sep=0pt ]{ \pgfuseimage{logobastrans}};
   \draw(0.145\paperwidth,7pt)
   node [anchor=south west,outer sep=0pt, inner sep=0pt]
   { \usebeamerfont{footline}{
     \usebeamercolor[fg]{footline in partpage}{ 
    \insertshortauthor
    \ifx\insertshorttitle\@empty%
    \else\ -- \insertshorttitle
    \fi
    \ifx\insertshortdate\@empty%
    \else\ -- \insertshortdate
    \fi
    }}
  };
  \draw (\paperwidth - 0.05 \paperheight,7pt)
  node [anchor=south east,outer sep=0pt, inner sep=0pt]
  { \usebeamerfont{footline}
    \usebeamercolor[fg]{footline in partpage}
    \insertframenumber};
  % the content
  % Warning: position and sizes are not good.
  \draw (0.145\paperwidth,0.286\paperheight)
  node [anchor=south west,text width=0.83\paperwidth]{
    \usebeamerfont{title in titlepage} \usebeamercolor[fg]{title}%
    {\resizebox{2.0cm}{!}{\arabic{section}}\\[0.5cm] % the big number
    \insertsectionhead}};      % the title
\end{tikzpicture}%
\hspace*{-\beamer@rightmargin}
}

