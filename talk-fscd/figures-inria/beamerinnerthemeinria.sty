\defbeamertemplate*{title page}{inria theme}
{%
% for the horizontal offset see
% see section "7.2.2 or 8.2.2 The Sidebars" of the beamer user guide
\hspace*{-\Gm@lmargin}%
\begin{tikzpicture}
   \useasboundingbox(0,0)rectangle(\paperwidth,\paperheight);
   \draw(0,0)node [anchor=south west,outer sep=0pt, inner sep=0pt ]{\pgfuseimage{figbackground}};
   \draw (1cm,\paperheight)
    node [anchor=north west,outer sep=0pt, inner sep=0pt ]{\pgfuseimage{logoup}};
   \draw (0.05 \paperwidth,0.286\paperheight)
   node [anchor=south west,text width=0.83\paperwidth]{
     \usebeamerfont{title in titlepage} \usebeamercolor[fg]{title} \inserttitle};
   \draw (0.09 \paperwidth,0.28\paperheight)  
   node [anchor=north west,text width=0.83\paperwidth]{
     \usebeamerfont{subtitle in titlepage} \usebeamercolor[fg]{subtitle} \insertsubtitle};
   \draw (0.09 \paperwidth,0.15\paperheight)
   node [anchor=north west,text width=0.93\paperwidth]{
     \usebeamerfont{author in titlepage} \usebeamercolor[fg]{author} \insertauthor};
   \draw (0.09 \paperwidth,0.28\paperheight)
   node [anchor=north west,text width=0.93\paperwidth]{
     \usebeamerfont{date in titlepage} \usebeamercolor[fg]{date} \insertdate};
\end{tikzpicture}%
\hspace*{-\beamer@rightmargin}
}

